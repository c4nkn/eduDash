@page
@using EduDash.Pages.Shared
@model EduDash.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "Shared/_LoginRegisterLayout";
}

<div class="container">
    <div class="col-md-4 offset-md-4">
        <h1 class="text-center mt-5">Welcome Back!</h1>
        <p class="text-center">Check your exam results or share results with students.</p>
        <hr />
        <form runat="server" method="post" id="loginForm">
            <div class="form-group mt-3">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
            </div>
            <div class="form-group-sm mt-3">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
            </div>
            <button type="submit" id="loginButton" class="btn btn-success btn-block mt-4" style="width: 100%;">Login</button>
        </form>
        <hr />
        <p class="mt-2 text-center">Don't you have an account?</p>
        <a asp-page="/Register" class="btn btn-primary" style="width: 100%;">Register</a>
        <div class="alert alert-danger alert-dismissible mt-2" style="display: @(Model.invalidEntry ? "block" : "none");">
            <button type="button" id="closeAlertButton" class="btn-close small" data-bs-dismiss="alert" aria-label="Close"></button>
            @ViewData["matchingError"]
             <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
             <script>
                 document.addEventListener('DOMContentLoaded', function() {
                     var closeAlertButton = document.getElementById('closeAlertButton');
                     closeAlertButton.addEventListener('click', function() {
                         $('.alert').fadeOut();
                     });
                 });
             </script>
        </div>
    </div>
</div>


